<h1>Edit photo 
<%= @photo_id %>
</h1>

<form action="/update_photo/<%= @photo_id %>">
  <div>
    <label for="source_input">
      Image URL
    </label>

    <input id="source_input" type="text" value="<%= @photo_source %>" name="the_source">
  </div>

  <div>
    <label for="caption_input">
      Caption
    </label>

    <input id="caption_input" type="text" value="<%= @photo_caption %>" name="the_caption">
  </div>

  <button>
   Update Photo
  </button>
</form>